{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "ESNext",
    "lib": ["ES2018", "DOM"],
    "target": "ESNext",
    "jsx": "react",
    "declaration": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": true,
    "experimentalDecorators": true,
    "strictFunctionTypes": true,
    "noUncheckedIndexedAccess": true,
  },
  "include": ["src/**/*"]
}